<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/nomSpecialite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="nomSpecialite"
                android:layout_column="0" />

            <TextView
                android:id="@+id/libellePresentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="libellePresentation"
                android:layout_column="0" />


            <GridLayout
                android:layout_column="0"
                android:columnCount="2"
                android:layout_marginTop="8dp"
                android:layout_gravity="fill_horizontal">


                <TextView
                    android:id="@+id/labelExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration: "
                    android:layout_column="0" />

                <TextView
                    android:id="@+id/dateExpiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/2020"
                    android:layout_column="1" />

            </GridLayout>

            <GridLayout
                android:layout_column="0"
                android:columnCount="2"
                android:layout_marginTop="8dp"
                android:layout_gravity="fill_horizontal">

                <TextView
                    android:id="@+id/labelLot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot N°"
                    android:layout_column="0" />

                <TextView
                    android:id="@+id/lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HF52521"
                    android:layout_column="1" />

            </GridLayout>

            <TextView
                android:id="@+id/conditionPrescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="8dp"
                android:text="conditionPrescription" />

            <Button
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="voirNotice"
                android:text="Voir la notice"
                android:layout_column="0" />

        </GridLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/voirRCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="voirRCP"
        android:text="Voir le résumé des caractéristique du produit"
        android:layout_column="0" />

    <TextView
        android:id="@+id/formePharma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="formePharma"
        android:layout_column="0" />
</LinearLayout>
